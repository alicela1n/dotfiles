### Aliases
alias refresh="exec zsh --login" # Refresh the zsh session after a config change
alias l="ls -lah" # Aliasing l to ls -lah because it's less typing
alias c="clear" # Aliasing clear to c because it's less typing
alias cls="clear" # Incase I accidentally type cls
alias config_zsh="$EDITOR ~/.zshrc" # Open the zsh config in an editor
alias edit="$EDITOR" # Edit a file
alias localpkgconfig="export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig"

# Aliases for git
alias gs='git status'
alias ga='git add'
alias gp='git push'
alias gpo='git push origin'
alias gtd='git tag --delete' 
alias gtdr='git tag --delete origin'
alias gr='git branch -r'
alias gplo='git pull origin'
alias gb='git branch '
alias gc='git commit'
alias gd='git diff'
alias gco='git checkout '
alias gl='git log'
alias gr='git remote'
alias grs='git remote show'
alias glo='git log --pretty="oneline"'
alias glol='git log --graph --oneline --decorate'

# Aliases for kitty
alias kssh="kitten ssh"
